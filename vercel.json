{
  "version": 2,
  "name": "Aviatick-Backend-Project",
  "builds": [
    {
      "src": "app.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/app.js"
    }
  ],
  "crons": [
    {
      "path": "/api/add-flight",
      "schedule": "* * * * *",
      "timezone": "Asia/Jakarta"
    },
    {
      "path": "/api/update-promo-status",
      "schedule": "* * * * *",
      "timezone": "Asia/Jakarta"
    }
  ]
}
